[extensions]
mq=
color=
graphlog=
transplant=
rebase=
purge=
shelve=~/.hgext/hgshelve.py
kilnauth=~/.hgext/kilnauth.py
progress=

[auth]
kiln.username=douglas@fogcreek.com

[ui]
username=Doug Patti <douglas@fogcreek.com>
ignore=~/.hgignore_global
merge=vimdiff

[merge-tools]
vimdiff.executable=vim
vimdiff.args = -d $output $base $local $other -c "wincmd J"
vimdiff.premerge=keep

[alias]
place=!$HG bookmark | grep '*' | sed 's/\W*\(\w*\).*/\1/';
st=!CURRENT=`hg place` && [ -n "$CURRENT" ] && echo "Currently on ${CURRENT}"; $HG status; $HG diff | grep --color -In "^+.*\(consol  e\.log\|debugger\)" || true;                                        
push=push -r.
out=out -r.
hist=!BRANCH=$1 && $HG log -l 20 -G --template "\x1B[0;33m{rev}\x1B[0m:\x1B[0;33m{node|short}\x1B[0m \x1B[0;32m{bookmarks}\x1B[0m \x  1B[1;33m{tags}\x1B[0m {desc|firstline}\n" -r ::${BRANCH:-.} $@ | grep -v "^[| ]\+$" | sed 's/\x1B\[[^m]\+m\x1B\[0m //g' | sed -e 's/  \(:\x1B\[0;33m.......\)[0-9a-f]\+/\1/' | /bin/less -FXRS
