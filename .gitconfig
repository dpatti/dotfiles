[user]
    name = dpatti
    email = douglas.patti@gmail.com

[alias]
    co = checkout
    ci = commit
    st = status -sb
    br = branch
    #hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    hist = log --oneline --decorate --graph --date-order -n 20
    type = cat-file -t
    dump = cat-file -p
[apply]
    whitespace = fix
[core]
    excludesfile = ~/.gitignore_global
	autocrlf = input
	editor = gvim
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    #frag = magenta bold
    #old = red bold
    #new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[merge]
    tool = gvimdiff
