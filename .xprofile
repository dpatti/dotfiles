# Repeat rate: 200ms delay, 40 repeats/s
xset r rate 200 40

# 1 hour lock
xset s 3600
xset dpms 3600 3600 3600

# Set left-win as the compose key
setxkbmap -option compose:lwin

# Map caps lock to escape
setxkbmap -option caps:escape

# Palms
synclient AreaLeftEdge=156 AreaRightEdge=1247 AreaTopEdge=134 AreaBottomEdge=503
