#!/usr/bin/env bash
set -euo pipefail

if [[ $USER == "root" ]]; then
  echo "aura-upgrade-all: don't invoke with \`sudo\`" >&2
  exit 1
fi

set -x

sudo pellets

# aura -Syu
aura --sync --refresh --sysupgrade

# aura -Aux --noconfirm
aura --aursync --sysupgrade --unsuppress --noconfirm --delmakedeps
